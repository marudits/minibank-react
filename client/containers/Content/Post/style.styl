@import '../../../styles/_variable.styl'

.datalist {
	
	&-grid {
		padding: 30px;
	}	
}

.grid {
	
	&-card {
		height: 400px;
		margin-bottom: 15px;

		&__image {

			img {
				display: block;
				max-height: 200px; 
				width: auto;
				height: 100%;
			}
		}

		&__caption {
			padding: 10px; 16px;
			height: 100px;

			h3 {									text-overflow: ellipsis;
    			overflow: hidden;
    			white-space: nowrap;

			}

			p {
				color: #999;
				text-overflow: ellipsis;
    			overflow: hidden;
    			white-space: nowrap;
			}
		}
	}
}

.timeline {
	line-height: 1.4;

	&-item {
		padding: 0px !important;

		&__title {
			font-size: 1.3rem;
			font-weight: 500;
		}

		&__text {
			font-size: 1.2rem;
		}

		&__delete {
			font-size: 1.5rem;
			cursor: pointer;
		}

		
	}
}